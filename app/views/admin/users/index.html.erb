<div class="container">
  <div class="row">
    <div class="col">
      <table class="table mt-5">
        <tr>
          <th>名前</th>
          <th>メールアドレス</th>
          <th>会員ステータス</th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to admin_user_path(user) do %>
                <%= user.name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_active? %>
                <span class="text-success">有効</span>
              <% else %>
                <span class="text-secondary">退会済み</span>
              <% end %>
                </span>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>