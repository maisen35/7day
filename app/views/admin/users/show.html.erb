<div class="container">
  <div class="row d-flex justify-content-around">
    <div class="col-10">
      <table class="table mt-5">
        <tr>
          <th>名前</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>Twitter</th>
          <td><%= @user.twitter %></td>
        </tr>
        <tr>
          <th>Instagram</th>
          <td><%= @user.instagram %></td>
        </tr>
        <tr>
          <th>自己紹介</th>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @user.is_active? %>
              <span class="text-success">有効</span>
            <% else %>
              <span class="text-secondary">退会済み</span>
            <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td><%= link_to '編集', edit_admin_user_path(@user), class: "btn btn-outline-success edit-btn" %></td>
        </tr>
      </table>
      <table class="table">
        <tr>
          <th>投稿</th>
          <th>日付</th>
          <td></td>
        </tr>
        <% @tweets.each do |tweet| %>
          <tr>
            <td><%= tweet.tweet %></td>
            <td><%= tweet.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= link_to '削除', admin_tweet_path(tweet), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger"%></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>