<div class="container">
  <div class="row">
    <div class="col">
      <%= @user.name %>
      <%= @user.introduction %>
      <%= @user.is_active %>
      <%= link_to '編集', edit_admin_user_path(@user) %>
      <% @tweets.each do |tweet| %>
        <%= tweet.tweet %>
        <%= link_to '削除', admin_tweet_path(tweet), method: :delete, "data-confirm" => "本当に削除しますか？"%>
      <% end %>
    </div>
  </div>
</div>