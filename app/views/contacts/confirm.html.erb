<div class="container">
  <div class="row d-flex justify-content-around">
    <div class="col-9">
      <div>
        <div>
          <div class="inquiry-page">お名前</div>
          <div><%= @contact.name %></div>
        </div>
        <div>
          <div>
            <div class="inquiry-page">メールアドレス</div>
            <div><%= @contact.email %></div>
          </div>
        </div>
        <div>
          <div class="inquiry-page">ご用件</div>
          <div><%= @contact.subject_i18n %></div>
        </div>
        <div>
          <div class="inquiry-page">お問い合わせ内容</div>
          <div class="break-word"><%= @contact.message %></div>
        </div>
        <div class="d-flex justify-content-around mt-2">
          <div>
            <%= form_for @contact, url: back_path do |f| %>
              <%= f.hidden_field :name %>
              <%= f.hidden_field :email %>
              <%= f.hidden_field :subject %>
              <%= f.hidden_field :message %>
              <%= f.submit '入力画面に戻る', class: 'btn btn-secondary' %>
            <% end %>
          </div>
          <div>
            <%= form_for(@contact) do |f| %>
              <%= f.hidden_field :name %>
              <%= f.hidden_field :email %>
              <%= f.hidden_field :subject %>
              <%= f.hidden_field :message %>
              <%= f.submit '送信', class: 'btn btn-success' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

