<% if tweet.favorited_by?(current_user) %>
  <%= link_to tweet_likes_path(tweet), method: :delete, remote: true do %>
    <i class="fas fa-star"></i><%= tweet.likes.count %>
  <% end %>
<% else %>
  <%= link_to tweet_likes_path(tweet), method: :post, remote: true do %>
    <i class="far fa-star"></i><%= tweet.likes.count %>
  <% end %>
<% end %>