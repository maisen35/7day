<% if current_user == user %>
<% else %>
  <% if current_user.followings?(user) %>
    <%= link_to user_relationships_path(user.id), method: :delete,  class: "btn btn-outline-success" do %>
      <i class="fas fa-user-friends"></i>
    <% end %><!--解除-->
  <% else %>
    <%= link_to  user_relationships_path(user.id), method: :post, class: "btn btn-success" do %>
      <i class="fas fa-user-friends"></i>
    <% end %><!--登録-->
  <% end %>

<% end %>