<div class="container-fluid">
  <div class="row parent">
    <div class="col-md-6 col-sm-12 child position-relative"id="tall">
      <div class="position-absolute z-index-9999 w-100 h-100">
        <div class="d-flex justify-content-center align-items-center flex-column w-100 h-100">
          <h1>Hoge</h1>
          <p>Fuga</p>
        </div>
      </div>
      <div id="theTarget">
        <div class="image1"></div>
        <div class="image2"></div>
        <div class="image3"></div>
        <div class="image4"></div>
        <div class="image5"></div>
        <div class="image6"></div>
        <div class="image7"></div>
      </div>
    </div>
    <div class="col-md-6 col-sm-12 grey child">
      <%= render 'public/searches/search' %>
      <div class="d-flex justify-content-around align-items-center flex-column">
        <% @tweets.each do |tweet| %>
          <div class="d-flex rank-color fadeUp change-time col-10">
            <div>
              <%= link_to user_path(tweet.user.id) do %>
                <%= image_tag tweet.user.get_profile_image, class: "img" %>
              <% end %>
            </div>
            <div>
              <%= link_to tweet_path(tweet) do %>
                <div class="text-dark">
                  <div class="user-name">
                    <%= tweet.user.name %>
                  </div>
                  <div>
                    <%= tweet.tweet.truncate(15) %>
                  </div>
                </div>
              <% end %>
              <div id="like_buttons_<%= tweet.id %>">
                <%= render 'public/likes/like', tweet: tweet %>
              </div>
            </div>
         </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
