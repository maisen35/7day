<div class="container-fluid">
  <div class="row">
    <div class="col-6 pink vert">
      <%= @tweet.tweet %>
      <%= render 'public/likes/like', tweet: @tweet %>
    </div>
    <div class="col-6 brown vert">
      <%= image_tag @tweet.user.get_profile_image, class: "col-2" %>
      <%= link_to user_path(@tweet.user.id) do %>
        <%= @tweet.user.name %>
      <% end %>
      <% if current_user == @tweet.user %>
        <%= link_to '編集', edit_user_path(@tweet.user.id) %>
      <% end %>
    </div>
  </div>
</div>