<div class="letter w-100 h-100 position-relative">
  <h6 class="font-weight-bold w-100 h-10 position-absolute d-flex align-items-center justify-content-center">プ　ロ　フ　ィ　ー　ル</h6>
  <div class="position-absolute w-40 h-32 d-flex justify-content-around align-items-center">
    <%= image_tag user.get_profile_image, class: "img-size" %>
  </div>
  <div class="d-flex w-100 h-100">
    <div class="w-50 h-75 vert d-flex justify-content-end align-items-center">
      <div class="">
        <div class="name-font display-4">
          <%= user.name %>
        </div>
        <div class="name-font">
          <%= user.introduction %>
        </div>
        <div class="name-font">
          <%= link_to user_followings_path(user) do %>
            フォロー<span><%= user.followings.count %></span>
          <% end %>
          <%= link_to user_followers_path(user) do %>
            フォロワー<span><%= user.followers.count %></span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="w-50 h-90 d-flex align-items-end justify-content-end justify-content-around">
      <% if user.twitter.present? %>
        <%= link_to user.twitter do %>
          <div class="btn btn-outline-primary"><i class="fab fa-twitter"></i></div>
        <% end %>
      <% end %>
      <% if user.instagram.present? %>
        <%= link_to user.instagram do %>
          <div class="btn btn-outline-danger"><i class="fab fa-instagram"></i></div>
        <% end %>
      <% end %>

      <% if current_user == user %>
        <%= link_to edit_user_path(user) do %>
          <div class="btn btn-outline-secondary"><i class="fas fa-edit"></i></div>
        <% end %>
      <% else %>
        <div class="edit-block">
          <%= render 'public/relationships/info', user: user %>
        </div>
      <% end %>
    </div>
  </div>
</div>