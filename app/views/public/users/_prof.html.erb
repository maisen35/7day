<div class="post-head">
  <div class="post-head-child">
    <h6 class="text-danger text-center">プ　ロ　フ　ィ　ー　ル</h6>
    <div class="d-flex">
      <div class="col-md-2 col-sm-1 mr-auto">
        <%= image_tag user.get_profile_image, class: "img-size" %>
      </div>
      <div class="d-flex justify-content-end col-md-7 col-sm-6">
        <div class="code-box"></div>
        <div class="code-box"></div>
        <div class="code-box"></div>
        <div class="line">_</div>
        <div class="code-box"></div>
        <div class="code-box"></div>
        <div class="code-box"></div>
        <div class="code-box"></div>
      </div>
    </div>
  </div>
</div>
<div class="block">
  <div class="under">
    <div class="vert name-block">
      <div class="name-font display-4">
        <%= user.name %>
      </div>
      <div class="name-font">
        <%= user.introduction %>
      </div>
      <div class="name-font">
        <%= link_to user_followings_path(user) do %>
          フォロー<span><%= user.followings.count %></span>
        <% end %>
        <%= link_to user_followers_path(user) do %>
          フォロワー<span><%= user.followers.count %></span>
        <% end %>
      </div>
    </div>
    <div>
      <% if user.twitter.present? %>
        <%= link_to user.twitter do %>
          <div class="btn btn-outline-primary mr-2"><i class="fab fa-twitter display-5"></i></div>
        <% end %>
      <% end %>
      <% if user.instagram.present? %>
        <%= link_to user.instagram do %>
          <div class="btn btn-outline-danger ml-2"><i class="fab fa-instagram display-5"></i></div>
        <% end %>
      <% end %>
    </div>
    <div class="d-flex justify-content-around">
      <% if current_user == user %>
        <%= link_to '編　集', edit_user_path(user), class: "spbtn edit-block" %>
      <% else %>
        <div class="edit-block">
          <%= render 'public/relationships/info', user: user %>
        </div>
      <% end %>
    </div>
  </div>
</div>