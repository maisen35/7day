<div class="container-fluid">
    <div class="row">
        <div class="col-6 red">
            <% @tweets.each do |tweet| %>
                <%= tweet.tweet %>
            <% end %>
            <% if current_user == @user %>
                <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
            <% end %>
        </div>
        <div class="col-6 blue">
            <%= image_tag @user.get_profile_image, class: "col-2" %>
            <div class="vert">
                <%= @user.name %><br>
                <% if current_user == @user %>
                    <%= link_to '編集', edit_user_path(@user) %>
                <% else %>
                    <%= render 'public/relationships/info', user: @user %>
                <% end %>
            </div>
        </div>
    </div>
</div>